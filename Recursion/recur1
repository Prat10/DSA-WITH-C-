#include <iostream>
using namespace std;

int sumOfArray(int n,int a[]){
 if(n < 0) return 0; // base case to terminate the function
 return sumOfArray(n-1,a)+a[n];
 }
 
 int main(){
   int n;
   cin>>n;
   int a[n];
   for(int i=0;i<n;i++){
    cin>>a[i];
    }
   cout<<sumOfArray(n-1,a);
}


/// Finding the digit sum using the recursion 


int Digit_sum(int n){
    if(n==0) return 0; // base case to terminate the function
    return Digit_sum(n/10)+n%10;
 }
 
 int main(){
   int n;
   cin>>n;
   cout<<Digit_sum(n);
}
Time Compleity :- log(n)

Question :- Power of Number :
#include <bits/stdc++.h>
using namespace std;
 int power(int n,int p){
    if(p==0){
        return 1;
    }
    int prevPower=power(n,p-1);
    return n*prevPower;
}
 int main() {
    int n,p;
    cin>>n>>p;
    cout<<power(n,p)<<endl;
}
